{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container py-5">
        <div>
            <div class="col-lg-10 col-md-12 mx-auto">
                <div class="p-4 bg-white shadow rounded">

                    <h1 class="text-center mb-4">Cr√©er un produit</h1>

                    {{ form_start(form) }}

                    <div class="my-custom-class-for-errors mb-3">
                        {{ form_errors(form) }}
                    </div>


                    <div class="row g-3">
                        <div class="col-md-6">
                            {{ form_row(form.name) }}
                        </div>

                        <div class="col-md-6">
                            {{ form_row(form.slug) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.description) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.price) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.stock) }}
                        </div>

                        <div class="col-md-6">
                            {{ form_row(form.image) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.category) }}
                        </div>



                    </div>


                    <div>
                        {{ form_row(form.save) }}
                    </div>
                    {{ form_end(form) }}


                </div>
            </div>
        </div>
    </div>

{% endblock %}
