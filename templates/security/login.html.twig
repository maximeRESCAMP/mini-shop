{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center h-100">
        <form method="post" class="p-4 shadow rounded bg-white w-25">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3 text-center">
                    Vous êtes connecté en tant que <strong>{{ app.user.userIdentifier }}</strong>, <a
                        href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            {% endif %}
            <h1 class="h3 mb-3 font-weight-normal text-center">Connexion</h1>
            <label for="username">Email</label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control"
                   autocomplete="email" required autofocus>
            <label for="password" class="mt-2">Password</label>
            <input type="password" name="_password" id="password" class="form-control"
                   autocomplete="current-password"
                   required>
            <input type="hidden" name="_csrf_token" data-controller="csrf-protection"
                   value="{{ csrf_token('authenticate') }}">
            <button class="btn btn-primary w-100 mt-4" type="submit">
                Se connectez
            </button>
        </form>
    </div>
{% endblock %}
