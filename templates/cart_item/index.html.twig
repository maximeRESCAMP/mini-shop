{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <div class="container py-5">

        <div class="bg-white shadow rounded p-4">
            <h1 class="text-center mb-4">Panier</h1>
            <div class="d-flex justify-content-end">
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle text-center">
                    <thead class="table-dark">
                    <tr>
                        <th>Image</th>
                        <th>Nom</th>
                        <th>Prix</th>
                        <th>Quantité</th>
                        <th>Action</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for item in tabCartItem %}
                        <tr>
                            <td>{{ item.product.image }}</td>
                            <td>{{ item.product.name }}</td>
                            <td>{{ item.product.price | round(2,'common') }}</td>
                            <td>{{ item.quantity }}</td>
                            <td>
                                <a href="{{path('app_cart_item_removeCart', parameters = {id:item.id})}}" class="btn btn-danger mb-3"> Supprimer</a>
{#                                <a href="{{path('app_update_category', parameters = {id:category.id})}}" class="btn btn-primary mb-3"> Modifier une catégorie </a>#}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
